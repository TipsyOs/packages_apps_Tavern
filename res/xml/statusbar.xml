<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/statusbar_category"
    android:layout="@layout/tab"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <PreferenceScreen
        android:key="statusbarclock"
        android:fragment="com.gzr.tavern.fragments.StatusBarClock"
        android:title="@string/status_bar_clock_title"
        android:layout="@layout/preference_statusbarclock" />

    <PreferenceScreen
        android:key="status_bar_battery_style"
        android:title="@string/status_bar_battery_style_category"
        android:layout="@layout/preference_statusbar_battery_style"
        android:fragment="com.gzr.tavern.fragments.StatusbarBatteryStyle" />
        
    <PreferenceScreen
        android:key="quicksettings"
        android:fragment="com.gzr.tavern.fragments.QuickSettings"
        android:layout="@layout/preference_systemui_tuner_qs"
        android:title="@string/quicksettings_category" />

     <PreferenceScreen
        android:key="traffic"
        android:fragment="com.gzr.tavern.fragments.Traffic"
        android:layout="@layout/preference_traffic"
        android:title="@string/traffic_category" />

     <PreferenceScreen
        android:key="systemui_tuner_statusbar"
        android:title="@string/statusbar_items_category"
        android:layout="@layout/preference_systemui_tuner_statusbaritems" >
        <intent
            android:action="android.intent.action.MAIN"
            android:targetPackage="com.android.systemui"
            android:targetClass="com.android.systemui.tuner.TunerActivity" />
     </PreferenceScreen>

     <PreferenceScreen
        android:key="statusbar_notifications"
        android:fragment="com.gzr.tavern.fragments.StatusbarNotifications"
        android:layout="@layout/preference_statusbar_notifications"
        android:title="@string/statusbar_notifications_category" />

        <PreferenceScreen
        android:key="battery_bar"
        android:fragment="com.gzr.tavern.fragments.BatteryBar"
        android:layout="@layout/preference_batterybar"
        android:title="@string/battery_bar" />

    <com.android.settings.preference.SystemSettingSwitchPreference
           android:key="double_tap_sleep_gesture"
           android:title="@string/double_tap_to_sleep_title"
           android:summary="@string/double_tap_to_sleep_summary"
           android:defaultValue="true" />

     <PreferenceScreen
        android:key="carrier_label_settings"
        android:fragment="com.gzr.tipsy.fragments.CarrierLabelSettings"
        android:title="@string/carrier_label_settings_title" />

</PreferenceScreen>
